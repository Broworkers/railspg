%html

  %head
    %title RailsPG
    %meta( name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" )
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Istok+Web:400,700,400italic,700italic", "http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic", media: "all"
    = javascript_include_tag "application"

    = csrf_meta_tags

  %body

    %nav
      = image_tag "logo.png", alt: "RailsPG", height: "25px", id: "logo"
      = link_to "Chat", "/chat", class: "current"
      = link_to "Character Sheets", "/sheets"

    = yield
